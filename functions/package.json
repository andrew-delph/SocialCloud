{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "copy-common": "npx copyfiles -f ../common/react-video-call-common-1.0.0.tgz . && npm install react-video-call-common-1.0.0.tgz",
    "reset-dev": "npm run copy-common && npm install",
    "dev": "tsc-watch --onSuccess \"npm run docker\" --onCompilationStarted \"echo 'watching worker'\"",
    "docker": "docker build -f .  -t andrewdelph/video-call-worker:latest ../ && docker push andrewdelph/video-call-worker:latest",
    "prod": "node ./lib/index.js"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "amqplib": "^0.10.3",
    "dotenv": "^16.0.3",
    "firebase-admin": "^10.3.0",
    "firebase-functions": "^4.1.1",
    "ioredis": "^5.2.5",
    "react-video-call-common": "file:../common",
    "redis": "^4.5.1",
    "redlock": "^5.0.0-beta.2",
    "socket.io": "^4.5.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@socket.io/redis-adapter": "^8.0.1",
    "@types/amqplib": "^0.10.1",
    "@types/redlock": "^4.0.4",
    "tsc-watch": "^6.0.0",
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^0.2.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.5.4"
  },
  "private": true
}
