{
  "name": "matcher",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "nodemon --delay 1000ms --ignore dist --watch ./src  --ext ts --exec 'npm run k8-restart'",
    "docker": "bazel run image_push",
    "k8-restart": "npm run docker && kubectl rollout restart deployment/matcher && kubectl rollout status deployment/matcher --watch=true --timeout=60s  && date",
    "prod": "node ./dist/matcher.js"
  },
  "engines": {
    "node": "16"
  },
  "dependencies": {
    "socket.io": "4.6.1",
    "@socket.io/redis-adapter": "8.0.0",
    "amqplib": "^0.10.3",
    "cluster": "^0.7.7",
    "dotenv": "^16.0.3",
    "firebase-admin": "^10.3.0",
    "firebase-functions": "^4.1.1",
    "ioredis": "5.2.5",
    "common-messaging": "link:../common-messaging",
    "common": "link:../common",
    "redlock": "^5.0.0-beta.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.1",
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^0.2.0",
    "nodemon": "^2.0.20",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.5.4"
  },
  "private": true
}
