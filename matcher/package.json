{
  "name": "matcher",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc-watch --onSuccess \"npm run k8-restart\" --onCompilationStarted \"echo 'watching matcher'\"",
    "docker": "docker build -f Dockerfile -t andrewdelph/video-call-matcher:latest ../ && docker push andrewdelph/video-call-matcher:latest",
    "k8-restart": "npm run docker && kubectl rollout restart deployment/matcher && kubectl rollout status deployment/matcher --watch=true --timeout=60s && kubectl logs --selector=app=matcher -f",
    "prod": "node ./dist/index.js"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "react-video-call-common": "file:../common",
    "neo4j-grpc-common": "file:../neo4j/neo4j-grpc-common",
    "@socket.io/redis-adapter": "8.0.0",
    "socket.io": "4.5.4",
    "ioredis": "5.2.5",
    "amqplib": "^0.10.3",
    "redlock": "^5.0.0-beta.2",
    "dotenv": "^16.0.3",
    "firebase-admin": "^10.3.0",
    "firebase-functions": "^4.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.1",
    "@types/node": "^18.11.18",
    "@types/redlock": "^4.0.4",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^0.2.0",
    "nodemon": "^2.0.20",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.5.4"
  },
  "private": true
}
